<?xml version="1.0" encoding="UTF-8"?>
<root>
  <model>
    <name>User</name>
    <attribute>
      <title>Name</title>
      <validators>
        <presence>true</presence>
        <datatype>string</datatype>
        <maxlength>10</maxlength>
        <minlength>2</minlength>
      </validators>
    </attribute>
    <attribute>
      <title>familyname</title>
      <validators>
        <presence>false</presence>
        <datatype>string</datatype>
        <maxlength>30</maxlength>
        <minlength>2</minlength>
      </validators>
    </attribute>
    <attribute>
      <title>birthdate</title>
      <validators>
        <presence>true</presence>
        <datatype>date</datatype>
      </validators>
    </attribute>
    <attribute>
      <title>time</title>
      <validators>
        <presence>true</presence>
        <datatype>datetime</datatype>
      </validators>
    </attribute>
    <attribute>
      <title>email</title>
      <validators>
        <presence>true</presence>
        <datatype>email</datatype>
      </validators>
    </attribute>
    <attribute>
      <title>zip_code</title>
      <validators>
        <presence>true</presence>
        <datatype>integer</datatype>
      </validators>
    </attribute>
    <attribute>
      <title>ratio</title>
      <validators>
        <presence>true</presence>
        <datatype>float</datatype>
        <precision>3</precision> <!-- precision express the number of digits after comma for datatype Float -->
      </validators>
    </attribute>
    <attribute>
      <title>telephone</title>
      <validators>
        <presence>true</presence>
        <datatype>telephone</datatype>
      </validators>
    </attribute>
    <attribute>
      <title>website</title>
      <validators>
        <presence>true</presence>
        <datatype>url</datatype>
      </validators>
    </attribute>
    <attribute>
      <title>distribution_share</title>
      <validators>
        <presence>true</presence>
        <datatype>percentage</datatype>
      </validators>
    </attribute>
    <attribute>
      <title>content</title> <!-- Just a dummy example -->
      <validators>
        <presence>true</presence>
        <datatype>multiple</datatype> <!-- For mutilple values attribtues such as arrays -->
        <maxvalues>4</maxvalues> <!-- Expresses the maximum number of values permitted for this attribute -->
      </validators>
    </attribute>
  </model>
</root>
